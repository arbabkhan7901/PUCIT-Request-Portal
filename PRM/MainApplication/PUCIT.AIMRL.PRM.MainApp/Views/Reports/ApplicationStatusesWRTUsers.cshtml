                        </a>
                    </li>
                </ul>
            </div>*@
            <!-- /.modal-content -->
        </div>
    </div>
    <!-- PAGE CONTENT ENDS -->
</div>
<!-- main.cont -->
@section PopupsAndTemplates
{
    <script id="ApplicationStatusesTemplate" type="text/x-handlebars-template">
        <thead>
            <tr id="#">
                <th class="center">#</th>
                <th>Login</th>
                <th>User Name</th>
                <th>IsApprover</th>
                <th>Designation</th>

                <th scope="col" width="5%">All</th>
                <th scope="col" width="5%">Pending
                </th>
                <th scope="col" width="5%">Accepted
                </th>
                <th scope="col" width="5%">Rejected
                </th>
                <th scope="col" width="5%">Not Assigned Yet
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each StatusList}}
            <tr id="{{UserId}}">
                <td class="center"></td>
                <td>{{Login}}</td>
                <td>{{Name}}</td>
                <td>{{IsContributor}}</td>
                <td>{{Title}}</td>
                <td>{{All}}</td>
                <td>{{Pending}}</td>
                <td>{{Accepted}}</td>
                <td>{{Rejected}}</td>
                <td>{{NotAssigned}}</td>
            </tr>
            {{/each}}
        </tbody>
    </script>
}