@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Header
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/mywebapp/Security/mywebapp.ui.addNewItems.js")"></script>
    @Scripts.Render("~/bundles/roles")
}
@section scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            debugger;
            MyWebApp.UI.AddNewItems.readyMain();
        });
    </script>
}
@section BreadCrumb
{
    <li>
        <a href='@Url.Content("~/Security/")'>Security</a>
    </li>
    <li>
        <a href='@Url.Content("~/Security/AddNewItems/")'>Add New Items</a>
    </li>
}


<div class="page-content">
    <div class="page-header">
        <h1>
            Add New Items:
            <select style="display:inline ; font-size:small" id="selectType1">
                <option value="-1">All</option>
                <option value="1">Active</option>
                <option value="0">In Active</option>
            </select>
            <a role="button" class="btn-new-mail pull-right" data-toggle="modal" id="newItem">
                <span class="btn btn-purple no-border">
                    <i class="menu-icon fa fa-pencil-square-o"></i>
                    <span class="bigger-110">Add new Items</span>
                </span>
            </a>
        </h1>
    </div><!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="message-list-container">
                        <div class="message-list" id="Roles">
                            <table id="simple-table-Item" class="table  table-bordered table-hover"></table>
                        </div>
                    </div>
                </div>
            </div><!-- /.row -->
            <!-- /.modal-content -->
        </div>
    </div><!-- PAGE CONTENT ENDS -->
</div>



@section PopupsAndTemplates
{
    @{
        Html.RenderAction("YesNoModal", "Partial");
    }
    <div id="modal-form" tabindex="-1" class="modal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="ModalClose" class="close" data-dismiss="modal">×</button>
                    <h4 class="blue bigger">Item information</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div style="padding-left:50px;">
                            <input type="hidden" name="hiddenid" id="hiddenid" />
                            <div class="col-xs-5">
                                <label class="asterisk" for="form-field-first"><b>Name : </b></label>
                                <input type="text" class="input-sm form-control" id="Itemname" />
                            </div>
                        </div>
                        <div style="padding-left:50px;">
                            <div class="col-xs-5">
                                <label class="asterisk" for="form-field-first"><b> Fund Description : </b></label>
                                <input type="text" class="input-sm form-control" id="ItemDescription" />
                            </div>
                        </div>
                        <div id="item_category"></div>
                        <div style="padding-left:50px;">
                            <label class="asterisk" for="form-field-first"><b> Please select category: </b></label>
                        </div>

                        <div style="padding-left:50px;">
                            <div class="col-xs-5">
                                <input type="radio" id="generalItem" name="option" value="1" />
                                <label for="form-field-signature"><b> General Item  </b> </label>
                            </div>
                            <div class="col-xs-5">
                                <input type="radio" id="hardwareItem" name="option" value="2" />
                                <label for="form-field-signature"><b> Hardware Item  </b> </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm" data-dismiss="modal" id="Cancel">
                        <i class="ace-icon fa fa-times"></i>
                        Cancel
                    </button>
                    <button class="btn btn-sm btn-primary" id="Save">
                        <i class="ace-icon fa fa-check"></i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>


    <div id="modal-form-qty" tabindex="-1" class="modal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="ModalClose1" class="close" data-dismiss="modal">×</button>
                    <h4 class="blue bigger">Item information</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div style="padding-left:50px;">
                            <input type="hidden" name="hiddenidQty" id="hiddenidQty" />
                            <div class="col-xs-5">
                                <label class="asterisk" for="form-field-first"><b>Name : </b></label>
                                <input type="text" class="input-sm form-control" id="ItemnameQty" readonly="readonly" />
                            </div>
                        </div>
                        <div style="padding-left:50px;">
                            <div class="col-xs-5">
                                <label class="asterisk" for="form-field-first"><b>Quantity : </b></label>
                                <input type="text" class="input-sm form-control" id="ItemQuantity" readonly="readonly" />
                            </div>
                        </div>
                        <br>
                        <div style="padding-left:50px;">
                            <div class="col-xs-5">
                                <label class="asterisk" for="form-field-first"><b>Incoming Quantity : </b></label>
                                <input type="text" class="input-sm form-control" id="ItemInQuantity" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm" data-dismiss="modal" id="Cancel1">
                        <i class="ace-icon fa fa-times"></i>
                        Cancel
                    </button>
                    <button class="btn btn-sm btn-primary" id="SaveQty">
                        <i class="ace-icon fa fa-check"></i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>



    <div id="EditPermissionsModal" tabindex="-1" class="modal" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="closeedit" class="close" data-dismiss="modal">×</button>
                    <h4 class="primary bigger">Permissions Assignment</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12 col-sm-11">
                            <div class="space-4"></div>
                            <div class="row">
                                <div id="draggable" style="max-height:250px;overflow-y:auto">
                                    <ol id="sortable1" style="list-style-type:none"></ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm" data-dismiss="modal" id="CancelPermModal">
                        <i class="ace-icon fa fa-times"></i>
                        Cancel
                    </button>
                    <button class="btn btn-sm btn-primary" id="SaveMappings">
                        <i class="ace-icon fa fa-check"></i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
    <script id="RoleTemplate" type="text/x-handlebars-template">
        <thead>
            <tr id="#">
                <th>Name</th>
                <th>Description</th>
                <th>Quantity</th>

                <th scope="col" width="5%">Edit</th>
                <th scope="col" width="5%">Manage Quantity</th>
                <th scope="col" width="5%">Enable/Disable</th>
            </tr>
        </thead>
        <tbody>
            {{#each ItemsList}}
            <tr id="{{ItemId}}">
                <td>
                    <a href="#">{{ItemName}}</a>
                </td>
                <td>{{Description}}</td>
                <td>{{Quantity}}</td>
                <td align="center">
                    <div class="tblActions">
                        <a role="button" data-toggle="modal" class="edit btn-xs btn-new-mail  btn btn-purple no-border lnkEditItem" title="Click to edit">
                            <i class="menu-icon fa fa-pencil-square-o"></i>
                            <span class="bigger-110"></span>
                        </a>
                    </div>
                </td>
                <td align="center">
                    <div class="tblActions" id="manageQty">
                        <a role="button" data-toggle="modal" class="edit btn-xs btn-new-mail  btn btn-purple no-border lnkQtyItem" title="Click to Manage Quantity">
                            <i class="menu-icon fa fa-pencil-square-o"></i>
                            <span class="bigger-110"></span>
                        </a>
                    </div>
                </td>
                <td align="center" align="middle">
                    <div class="tblActions">
                        {{#ifEqual IsActive false}}
                        <a href="#" class="btn btn-xs btn-round widget-color-green lnkDeleteItem" id="dltbtn" title="Click to activate">
                            <i class="ace-icon icon-off"></i>
                        </a>
                        {{/ifEqual}}
                        {{#ifEqual IsActive true}}
                        <a href="#" class="delete btn btn-xs btn-danger btn-round lnkDeleteItem" id="dltbtn" title="Click to deactivate">
                            <i class="ace-icon icon-off"></i>
                        </a>
                        {{/ifEqual }}
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </script>

}