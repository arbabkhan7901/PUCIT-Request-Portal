@{
    Layout = null;
}

<div id="generalRequest">
    <div class="row">
        <div class="space-4"></div>
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="form-field-username"><b>Name: </b> </label>
                    <label id="name" for="form-field-username">@ViewBag.Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <label for="form-field-first"><b>Roll No: </b></label>&nbsp;
                <label id="rollNo" class="text" for="form-field-first">@ViewBag.RollNo</label>
            </div>
            <div class="col-md-3">
            </div>
            <div class="space-4"></div>
            <div class="space-4"></div>
        </div>
    </div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="asterisk" for="form-field-username"><b>Current Semester: </b> </label>
                    <div id="general_semester_result"></div>
                    <select class="input-sm form-control" id="general_semester" autofocus>
                        <option id="general_non" selected disabled>Choose one</option>
                        <option id="one">1</option>
                        <option id="2nd">2</option>
                        <option id="3rd">3</option>
                        <option id="4th">4</option>
                        <option id="5th">5</option>
                        <option id="6th">6</option>
                        <option id="7th">7</option>
                        <option id="8th">8</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="asterisk" for="form-field-username"><b>Section: </b> </label>
                    <label for="form-field-username">@ViewBag.Section</label>
                </div>
            </div>
        </div>
    </div>
    <div class="space-4"></div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-4">
                <label class="asterisk" for="form-field-username"><b>Subject: </b> </label>
                <div id="general_Subject_result"></div>
                <input id="general_Subject" type="text" class="input-sm form-control" maxlength="30"><br />
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div class="space-4"></div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="asterisk" for="form-field-username"><b>Reason: </b></label>
                    <div id="general_reason_result"></div>
                    <textarea id="general_reason" class="form-control" maxlength="200" rows="6"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="space-4"></div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="form-field-username"><b>Attachments: (.jpg, .gif, .png) </b></label>
                    <ul>
                        <li>
                            Document Name
                            <div id="geneT_A1"></div>
                            <input id="Attachment1" type="text" class="input-sm form-control" maxlength="20"><div class="space-4"></div>
                            <div id="genera_A1"></div>
                            <input type="file" id="Attach1" />
                        </li>
                        <li>
                            Document Name
                            <div id="geneT_A2"></div>
                            <input id="Attachment2" type="text" class="input-sm form-control" maxlength="20"><div class="space-4"></div>
                            <div id="genera_A2"></div>
                            <input type="file" id="Attach2" />
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div class="space-4"></div>
    <div class="space-4"></div>
    <div>
        <div class="col-md-9"></div>
        <div class="col-md-3">
            <div class="pull-right">
                <i><font color="red">* </font>Indicates required fields.</i>
            </div>
        </div>
    </div>
</div>
