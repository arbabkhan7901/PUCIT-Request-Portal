@{
    Layout = null;
}

<div id="leaveForm" style="display:none">
    <div class="row">
    <div class="space-4"></div>
    <div style="padding-left:50px;">
        <div class="col-md-3">
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="form-field-username"><b>Name: </b> </label>
                <label id="name" for="form-field-username">@ViewBag.Name</label>
            </div>
        </div>
        <div class="col-md-3">
            <label for="form-field-first"><b>Roll No: </b></label>&nbsp;
            <label id="rollNo" class="text" for="form-field-first">@ViewBag.RollNo</label>
        </div>
        <div class="col-md-3">
        </div>
        <div class="space-4"></div>
        <div class="space-4"></div>
    </div>
</div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="asterisk" for="form-field-username"><b>Current Semester: </b> </label>
                    <div id="semester_result_leave"></div>
                    <select class="input-sm form-control" id="leave_semester" autofocus>
                        <option id="leave_non" selected disabled>Choose one</option>
                        <option id="one">1</option>
                        <option id="2nd">2</option>
                        <option id="3rd">3</option>
                        <option id="4th">4</option>
                        <option id="5th">5</option>
                        <option id="6th">6</option>
                        <option id="7th">7</option>
                        <option id="8th">8</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <label class="asterisk" for="form-field-first"><b>Father's Name : </b></label>
                <label for="form-field-username">@ViewBag.FatherName</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="asterisk" for="form-field-username"><b>Reason: </b></label>
                    <div id="reason_result_leave"></div>
                    <textarea id="leave_reason" class="form-control" maxlength="200" rows="6"></textarea>
                </div>
            </div>
            <div class="space-4"></div>
            <div class="space-4"></div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <label class="asterisk" for="form-field-username"><b>Leave Duration: </b></label>
                <div id="daterange_result_leave"></div>
                <div class="input-group">
                    <input class="date-picker" id="startDate" type="text" placeholder="MM-DD-YYYY" data-date-format="mm-dd-yyyy" />
                    <span class="input-group-addon">
                        To
                    </span>
                    <input class="date-picker" id="endDate" type="text" placeholder="MM-DD-YYYY" data-date-format="mm-dd-yyyy" />
                </div>
                <div class="space-4"></div>
                <div class="space-4"></div>
            </div>
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
    <div class="row">
        <div style="padding-left:50px;">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="form-field-first"><b>Note:</b></label>
                    <p>1.Leave will not be counted as presence towards attendance requirement.</p>
                    <p>2.Leave on medical grounds will be governed by PUCIT statutes.</p>
                </div>
            </div>

        </div>
    </div>
    <div>
        <div class="col-md-9"></div>
        <div class="col-md-3">
            <div class="pull-right">
                <i><font color="red">* </font>Indicates required fields.</i>
            </div>
        </div>
    </div>
</div>